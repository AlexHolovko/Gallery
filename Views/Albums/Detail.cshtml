@model Gallery.Models.Entities.Album
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="container py-4">
    <h2 class="mb-4 text-center">@Model.Name</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var image in Model.Images)
        {
        <div class="col">
            <div class="card shadow-sm border-0 h-100">
                <img src="~/uploads/@image.FilePath" class="card-img-top" alt="@image.Title" style="object-fit: cover; height: 200px;">
                <div class="card-body">
                    <h5 class="card-title">@image.Title</h5>
                    <p class="text-muted mb-0">@Localizer["UploadedLabel"]: @image.UploadedAt.ToLocalTime().ToShortDateString()</p>
                </div>
            </div>
        </div>
        }
    </div>
</div>
