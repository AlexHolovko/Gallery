<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gallery</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <header class="bg-light py-3 shadow-sm mb-4">
        <div class="container d-flex justify-content-center">
            <nav class="nav nav-pills">
                <a class="nav-link mx-2 @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index">Головна</a>
                <a class="nav-link mx-2" asp-controller="Gallery" asp-action="Index">Галерея</a>
                <a class="nav-link mx-2" asp-controller="Albums" asp-action="Index">Альбоми</a>
                <a class="nav-link mx-2" asp-controller="Home" asp-action="Privacy">Політика</a>
            </nav>
        </div>
    </header>
    <form asp-controller="Language" asp-action="SetLanguage" method="post">
        <select name="culture" onchange="this.form.submit()" class="form-select form-select-sm w-auto d-inline-block">
            <option value="uk" selected>Українська</option>
            <option value="en">English</option>
        </select>
    </form>
    <main role="main" class="pb-5">
        @RenderBody()
    </main>

    <footer class="text-center text-muted py-3 border-top">
        &copy; @DateTime.Now.Year - Gallery
    </footer>
</body>
</html>
