<form asp-action="Upload" method="post" enctype="multipart/form-data" class="container py-4" style="max-width: 600px;">
    <h2 class="text-center mb-4">Завантажити зображення</h2>

    <div class="form-group mb-3">
        <label>Назва</label>
        <input type="text" name="title" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Оберіть альбом</label>
        <select name="albumId" class="form-control" required>
            <option value="">-- Виберіть альбом --</option>
            @foreach (var album in ViewBag.Albums as List<Gallery.Models.Entities.Album>)
            {
            <option value="@album.Id">@album.Name</option>
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Оберіть зображення</label>
        <input type="file" name="file" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success w-100">Завантажити</button>

    @if (!ViewData.ModelState.IsValid)
    {
    <div class="alert alert-danger mt-4">
        <ul class="mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
            <li>@error.ErrorMessage</li>
                }
        </ul>
    </div>
    }
</form>
